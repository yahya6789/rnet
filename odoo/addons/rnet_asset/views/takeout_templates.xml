<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_takeout">
        <t t-call="web.html_container">
            <div class="header">
                <style type="text/css">
                    table.table-bordered > thead > tr > th {
                        border:1px solid;
                    }
                    table.table-bordered > tbody > tr > td {
                        border:1px solid;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <div class="row">
                        <div class="col-7">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo"/>
                        </div>
                        <div class="col-5">
                            <table class="table table-bordered table-sm m0">
                                <tbody>
                                    <tr>
                                        <td>Doc No.</td><td>:&#8194;5.5.3</td>
                                    </tr>
                                    <tr>
                                        <td>Revision</td><td>:&#8194;01</td>
                                    </tr>
                                    <tr>
                                        <td>Date</td><td>:&#8194;<span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d.%m.%Y')"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
                <div class="row mb24">
                    <div class="col-12">
                        <table class="table table-borderless table-sm">
                            <tbody>
                                <tr>
                                    <td>Record No.:</td>
                                </tr>
                                <tr>
                                    <td>Date Record:</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <style type="text/css">
                            .font-smaller {
                                font-size: 85%;
                            }
                            table.table-bordered > thead > tr > th {
                                border:1px solid;
                            }
                            table.table-bordered > tbody > tr > td {
                                border:1px solid;
                            }
                        </style>
                        <div class="row">
                            <div class="col">
                                <table class="table table-borderless table-sm ">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <h2 class="text-center m-0">Take Out</h2>
                                                <p class="text-center font-italic m-0">Bon Pengambilan Barang</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row mt24">
                            <div class="col-7">
                                <table class="table table-borderless table-sm">
                                    <tbody>
                                        <tr>
                                            <td>Client</td><td>:&#8194;<span t-field="o.project.name"/></td>
                                        </tr>
                                        <tr>
                                            <td>Address</td>
                                            <td>:&#8194;<span t-field="o.partner_id.street"/><br/>
                                                :&#8194;<span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.state_id.display_name"/><br/>
                                                :&#8194;<span t-field="o.partner_id.country_id.display_name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Purpose</td><td>:&#8194;<span t-field="o.gut_purpose"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-5">
                                <table class="table table-borderless table-sm">
                                    <tbody>
                                        <tr>
                                            <td>Takeout No.</td><td>:&#8194;<span t-field="o.name"/></td>
                                        </tr>
                                        <tr>
                                            <td>Date</td><td>:&#8194;<span t-field="o.scheduled_date" t-options='{"format": "dd-MM-yyyy"}'/></td>
                                        </tr>
                                        <tr>
                                            <td>Job Order No.</td><td>:&#8194;<span t-field="o.project.no"/></td>
                                        </tr>
                                        <tr>
                                            <td>Project</td><td>:&#8194;<span t-field="o.project.name"/></td>
                                        </tr>
                                        <tr>
                                            <td>From</td><td>:&#8194;<span t-field="o.location_id"/></td>
                                        </tr>
                                        <tr>
                                            <td>To</td><td>:&#8194;<span t-field="o.location_dest_id"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row mt24 font-smaller">
                            <div class="col-12">
                                <table class="table table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th width="1%">No.</th>
                                            <th width="29%">Description</th>
                                            <th width="15%">Type / Model</th>
                                            <th width="10%">Quantity</th>
                                            <th width="20%">Asset No.</th>
                                            <th width="25%">Remarks</th>
                                        </tr>
                                    </thead>
                                    <t t-set="idx" t-value="1"/>
                                    <tbody>
                                        <t t-foreach="o.move_ids_without_package" t-as="line">
                                            <tr>
                                                <td><span t-esc="idx"/></td>
                                                <td><span t-field="line.product_id.display_name"/></td>
                                                <td><span t-field="line.product_id.brand.name"/></td>
                                                <td>
                                                    <span t-esc="'%.0f'% line.quantity_done" />&#160;
                                                    <span t-field="line.product_id.uom_id.name"/>
                                                </td>
                                                <td>&#8194;</td>
                                                <td><span t-field="line.gut_remarks"/></td>
                                                <t t-set="idx" t-value="idx+1"/>
                                            </tr>
                                        </t>
                                        <t t-foreach="o.gut_asset_lines" t-as="line">
                                            <tr>
                                                <td><span t-esc="idx"/></td>
                                                <td><span t-field="line.asset_id.name"/></td>
                                                <td><span t-field="line.model"/></td>
                                                <td>&#8194;</td>
                                                <td><span t-field="line.number"/></td>
                                                <td><span t-field="line.remarks"/></td>
                                                <t t-set="idx" t-value="idx+1"/>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row mt24">
                            <div class="col-12">
                                <table class="table table-bordered table-sm">
                                    <tbody>
                                        <tr>
                                            <td width="25%"><div class="text-center">Issued By</div></td>
                                            <td width="25%"><div class="text-center">Checked By</div></td>
                                            <td width="25%"><div class="text-center">Approved By</div></td>
                                            <td width="25%"><div class="text-center">Received By</div></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                            </td>
                                            <td>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                                <div class="text-center">Quality Control</div>
                                            </td>
                                            <td>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                            </td>
                                            <td>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                                <p>&#160;</p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="font-smaller">Name :&#160;<span t-field="o.gut_issued_by.display_name"/></td>
                                            <td class="font-smaller">Name :&#160;<span t-field="o.gut_qc_by.display_name"/></td>
                                            <td class="font-smaller">Name :&#160;<span t-field="o.gut_approved_by.display_name"/></td>
                                            <td class="font-smaller">Name :&#160;<span t-field="o.gut_received_by.display_name"/></td>
                                        </tr>
                                        <tr>
                                            <td>Date :&#160;<span t-field="o.gut_issued_date" t-options='{"format": "dd-MM-yyyy"}'/></td>
                                            <td>Date :&#160;<span t-field="o.gut_qc_date" t-options='{"format": "dd-MM-yyyy"}'/></td>
                                            <td>Date :&#160;<span t-field="o.gut_approved_date" t-options='{"format": "dd-MM-yyyy"}'/></td>
                                            <td>Date :&#160;<span t-field="o.gut_received_date" t-options='{"format": "dd-MM-yyyy"}'/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="footer o_standard_footer">
                        <div class="col-12">
                            <div class="text-center" style="border-top: 1px solid black;">
                                <div t-if="report_type == 'pdf'">
                                    Page: <span class="page"/> / <span class="topage"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
