<odoo>
    <data>
        <record model="ir.ui.view" id="ogut_asset_calibration_form">
            <field name="name">Asset Calibration Form</field>
            <field name="model">gut.asset.calibration</field>
            <field name="description">Asset Calibration</field>
            <field name="arch" type="xml">
                <!--<form string="Asset Calibration" create="false" edit="false">-->
                <form string="Asset Calibration">
                    <sheet string="Asset Calibration">
                        <group string="Asset Calibration">
                            <group>
                                <field name="date"/>
                                <field name="asset" options="{'no_create_edit': True, 'no_quick_create': True, 'no_open': True}"
                                    widget="selection" required="1"
                                />
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="ogut_asset_calibration_tree">
            <field name="name">Asset Calibration Tree</field>
            <field name="model">gut.asset.calibration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" string="Calibration No."/>
                    <field name="date" string="Date"/>
                    <field name="asset" string="Asset"/>
                    <field name="description" string="Description"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>