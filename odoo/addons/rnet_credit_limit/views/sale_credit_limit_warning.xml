<odoo>
    <data>
        <record id="sale_credit_limit_warning_wizard" model="ir.ui.view">
            <field name="name">sale.credit.limit.warning.wizard</field>
            <field name="model">sale.credit.limit.warning</field>
            <field name="arch" type="xml">
                <form>
                    <field name="message" readonly="1"/>
                    <footer>
                        <button string="Yes" name="confirm"  type="object" default_focus="1" class="oe_highlight"/>
                        <button string="No" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

