<odoo>
    <data>
        <record id="message_wizard_form" model="ir.ui.view">
            <field name="name">message.wizard.form</field>
            <field name="model">message.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="message" readonly="1"/>
                    <footer>
                        <button name="action_yes" string="Yes" type="object" default_focus="1" class="oe_highlight"/>
                        <button name="action_no" string="No" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

