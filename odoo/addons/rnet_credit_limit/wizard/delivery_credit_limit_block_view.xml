<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="delivery_credit_limit_block_wizard">
        <field name="name">delivery.credit.limit.block.wizard</field>
        <field name="model">delivery.credit.limit.block</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <span>Request manager to approve the SO as the SO is
                        greater than credit limit or wait until your invoices
                        are paid.</span>
                </group>
                <footer>
                    <button name="action_exceed_limit" string="Request"
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"
                            class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>