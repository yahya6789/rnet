<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="material_purchase_requisition_form_view" model="ir.ui.view">
            <field name="name">Purchase Requisition Form View</field>
            <field name="model">material.purchase.requisition</field>
            <field name="inherit_id" ref="material_purchase_requisitions.material_purchase_requisition_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet[1]/group[1]" position="after">
                    <group>
                        <group col="8" colspan="4">
                            <field name="project_related"/>
                            <field name="new_investment"/>
                            <field name="expansion"/>
                            <field name="consumables"/>
                            <field name="is_import"/>
                            <field name="qc"/>
                            <field name="replacement"/>
                            <field name="misc"/>
                            <field name="car_rental"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>