<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_order_form">
            <field name="name">Purchase Order Form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='company_id']" position="after">
                    <field name="project"/>
                </xpath>
                <xpath expr="//sheet[1]/group[1]/group[2]/field[@name='project']" position="attributes">
                    <attribute name="string">Job Order No.</attribute>
                </xpath>
                <xpath expr="//field[@name='account_analytic_id']" position="replace"/>
                <xpath expr="//field[@name='analytic_tag_ids']" position="replace"/>
                <xpath expr="//button[@name='button_unlock']" position="after">
                    <button name="button_make_revision" states="purchase,finance_approval,director_approval" string="Make Revision" type="object"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>